{
  "name": "reflex-som",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && node scripts/inline-css.cjs",
    "optimize:thumbnails": "python3 scripts/resize_images.py",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "typecheck": "tsc --noEmit",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "validate": "npm run format:check && npm run lint && npm run typecheck && npm run knip",
    "preview": "vite preview",
    "prepare": "husky",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "optimize:images": "node scripts/optimize-images.mjs",
    "security:scan": "node scripts/security-scan.mjs",
    "validate:seo": "node scripts/seo-validator.mjs",
    "validate:sitemap": "node scripts/validate-sitemap.mjs",
    "validate:robots": "node scripts/validate-robots.mjs",
    "validate:url-format": "node scripts/validate-url-format.mjs",
    "validate:links": "node scripts/validate-links.mjs",
    "validate:css": "node scripts/validate-css.mjs"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "framer-motion": "^12.27.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^18.3.1",
    "react-intersection-observer": "^10.0.2",
    "react-router-dom": "^6.30.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.13.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.23",
    "cheerio": "^1.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.47",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.14",
    "terser": "^5.44.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^4.0.17"
  }
}
